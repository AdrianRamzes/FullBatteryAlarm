<Window x:Class="FullBatteryAlarm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="100" Width="300"
        WindowStyle="ToolWindow"
        ResizeMode="CanMinimize" 
        Closing="Window_Closing"
        Loaded="Window_Loaded">
    <Window.Resources>
        <ContextMenu x:Key="NotifierContextMenu"
                    Placement="MousePoint">
            <MenuItem Header="Exit" Click="Menu_Exit"/>
        </ContextMenu>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <Label Grid.Column="0" Grid.Row="0" Content="State: " VerticalAlignment="Center"/>
        <Label Grid.Column="0" Grid.Row="1" Content="Time Remaining:" VerticalAlignment="Center"/>

        <TextBlock Name="v_TextBlock_State" Grid.Column="1" Grid.Row="0" Text="NaN" VerticalAlignment="Center"/>
        <TextBlock Name="v_TextBlock_TimeRemaining" Grid.Column="1" Grid.Row="1" Text="Nan" VerticalAlignment="Center"/>
    </Grid>
</Window>
